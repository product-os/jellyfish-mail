{
  "name": "@balena/jellyfish-mail",
  "version": "2.0.49",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-mail.git"
  },
  "engines": {
    "node": ">=12.5.0"
  },
  "description": "Mail library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest",
    "lint-fix": "balena-lint --fix lib",
    "unit": "jest",
    "test": "npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-environment": "^4.3.0",
    "axios": "^0.21.1",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-config": "^1.3.3",
    "@balena/lint": "^6.1.1",
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.23",
    "depcheck": "^1.4.1",
    "deplint": "^1.1.3",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "nock": "^13.1.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.4.1",
    "ts-jest": "^27.0.3",
    "typedoc": "^0.20.36",
    "typescript": "^4.3.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
