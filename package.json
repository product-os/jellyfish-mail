{
  "name": "@balena/jellyfish-mail",
  "version": "0.0.189",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-mail.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Mail library for Jellyfish",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{js}"
    ],
    "modules": [
      "lib"
    ]
  },
  "scripts": {
    "lint": "balena-lint -e js --typescript lib && jellycheck && deplint && depcheck --ignores=shellcheck",
    "lint-fix": "balena-lint -e js --typescript --fix lib",
    "test": "npm run doc && catch-uncommitted --skip-node-versionbot-changes && make lint && make test",
    "doc": "jsdoc2md --template doc/README.hbs lib/index.js lib/mailgun/index.js > README.md",
    "postinstall": "if [ -z \"$CI\" ] && [ -d \".git\" ]; then husky install; fi"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-environment": "^2.4.15",
    "request": "^2.88.2",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/lint": "^5.4.1",
    "ava": "^3.15.0",
    "catch-uncommitted": "^1.6.2",
    "depcheck": "^1.4.0",
    "deplint": "^1.1.3",
    "husky": "^5.0.9",
    "jsdoc-to-markdown": "^6.0.1",
    "lint-staged": "^10.5.4"
  },
  "lint-staged": {
    "*.js": [
      "balena-lint -e js --typescript --fix",
      "npm run doc",
      "git add ."
    ]
  }
}
