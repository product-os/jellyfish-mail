{
  "name": "@balena/jellyfish-mail",
  "version": "2.0.148",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-mail.git"
  },
  "engines": {
    "node": ">=12.5.0"
  },
  "description": "Mail library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib && deplint && depcheck --ignore-bin-package --ignores=@types/jest,typedoc",
    "lint:fix": "balena-lint --fix lib",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "Apache-2.0",
  "dependencies": {
    "@balena/jellyfish-environment": "^6.0.0",
    "axios": "^0.24.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@balena/jellyfish-config": "^2.0.2",
    "@balena/lint": "^6.2.0",
    "@types/jest": "^27.0.3",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "jest": "^27.4.4",
    "lint-staged": "^12.1.2",
    "nock": "^13.2.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.1.1",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2021-12-11T00:35:09.375Z"
  }
}
