{
  "name": "@balena/jellyfish-mail",
  "version": "1.0.25",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-mail.git"
  },
  "engines": {
    "node": ">=12.5.0"
  },
  "description": "Mail library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint-fix",
      "git add ."
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint --typescript lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest",
    "lint-fix": "balena-lint --typescript --fix lib",
    "unit": "jest",
    "test": "catch-uncommitted --skip-node-versionbot-changes && npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-environment": "^4.1.12",
    "request": "^2.88.2",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/lint": "^5.4.2",
    "@types/jest": "^26.0.23",
    "@types/request-promise": "^4.1.47",
    "catch-uncommitted": "^2.0.0",
    "depcheck": "^1.4.0",
    "deplint": "^1.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.4.1",
    "ts-jest": "^26.5.6",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
